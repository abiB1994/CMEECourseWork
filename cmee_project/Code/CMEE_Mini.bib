	keywords = {Character release, colonization and range shifts, habitat suitability, insect invasions, Ischnura elegans, macroecology, Maxent, species distribution model, Sweden, thermotolerance},
	file = {Full Text PDF:/home/abi/Zotero/storage/UL7YETX2/Lancaster et al. - 2015 - Latitudinal shift in thermal niche breadth results.pdf:application/pdf;Snapshot:/home/abi/Zotero/storage/VLR3RJ8J/abstract.html:text/html}
}

